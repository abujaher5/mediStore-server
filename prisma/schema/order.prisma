model Order{
    id String @id @default(uuid())
    customerId String
    customer User @relation("CustomerOrders",fields: [customerId],references: [id])
    status OrderStatus @default(PENDING)
    totalAmount Float
    address String
    phone String
    // items OrderItem[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


    @@index([customerId])
    @@index([status])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}